/*******************************
             Card
*******************************/

/* Card */
@borderRadius: 0;
@padding: 0 12px;
@border: 1px solid #EEE;
@borderShadow: 0;

/* Shadow */
@shadowDistance: 0;

/* Header */
@headerColor: #333;
@headerFontSize:16px;
@headerFontWeight: normal;

/* Content */
@contentPadding: 8px 0;
@contentFontSize: 24px;
@internalBorderColor: #EEE;

/* Description */
@descriptionColor: #333;
